[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[scripts]
build_doc = "sh -c 'cd doc && make html'"
lint = "flake8 circle_core tests"
debug = "crcr --debug run"
test = "pytest -v --cov=circle_core --cov-report html:coverage_html --cov-report term-missing:skip-covered tests/"

[dev-packages]

[packages]
circle_core = {path = ".",extras = ["doc", "test"],editable = true}

[requires]
python_version = "3.6"
